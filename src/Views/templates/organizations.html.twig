<body>
<h1>Organizations</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Code</th>
        <th>Name</th>
        <th>Director</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Description</th>
    </tr>
    {% for organization in organizations %}
        <tr>
            <td>{{ organization.id }}</td>
            <td>{{ organization.code }}</td>
            <td>{{ organization.nameOrganization }}</td>
            <td>{{ organization.director }}</td>
            <td>{{ organization.address }}</td>
            <td>{{ organization.phone }}$</td>
            <td>{{ organization.description }}$</td>
            <td><a href="index.php?controller=organizations&action=edit&id={{ organization.id }}">edit</a> <a href="index.php?controller=organizations&action=delete&id={{ organization.id }}">delete</a></td>
        </tr>
    {% endfor %}
</table>
<a href="index.php?controller=organizations&action=new&id={{ organization.id }}">Add a new organization</a><br /><br />
